<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kkdev.kksystem.kkcarandroid.frg_RemoteDisplayLED">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="match_parent" android:layout_height="29dp"
        android:text="Debug LED Plugin Display"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_gravity="center"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txtLEDD_Row1"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txtLEDD_Row_2"
                android:textSize="20dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UP"
        android:id="@+id/btn_LedDiag_UP"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOWN"
        android:id="@+id/btn_LedDiag_DOWN"
        android:layout_alignTop="@+id/btn_LedDiag_UP"
        android:layout_toRightOf="@+id/btn_LedDiag_UP"
        android:layout_toEndOf="@+id/btn_LedDiag_UP" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/btn_LedDiag_BACK"
        android:layout_alignTop="@+id/btn_LedDiag_DOWN"
        android:layout_toRightOf="@+id/btn_LedDiag_ENTER"
        android:layout_toEndOf="@+id/btn_LedDiag_ENTER" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER"
        android:id="@+id/btn_LedDiag_ENTER"
        android:layout_alignTop="@+id/btn_LedDiag_BACK"
        android:layout_toRightOf="@+id/btn_LedDiag_DOWN"
        android:layout_toEndOf="@+id/btn_LedDiag_DOWN" />

</RelativeLayout>
